APP_NAME="Spark Original UI"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Database - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=spark_db
DB_USERNAME=spark_user
DB_PASSWORD=secret

# Cache & Sessions - Redis (production)
CACHE_STORE=redis
CACHE_PREFIX=spark_cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=secret
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Filesystem
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_CONNECTION=log

# Queue
QUEUE_CONNECTION=redis

# Mail (configure for production)
MAIL_MAILER=log

VITE_APP_NAME="${APP_NAME}"

